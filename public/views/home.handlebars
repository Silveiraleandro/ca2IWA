<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center p-5">
            <h1 class="mt-5">NBA the best players are here</h1>
            <p class="lead">Hire the best NBA players and build up your own squad</p>
            <div class="row">
                <div id="results" class="col-lg-9">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Player Position</th>
                            <th scope="col">Player</th>
                            <th scope="col">Value</th>
                            <th scope="col">Team</th>
                            <th scope="col" colspan= "2">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <!--handlebars for each-->
                          {{#each players}}
                            <tr>
                                <form action="/{{_id}}" method="POST">
                                    <input type="hidden" name="_method" value="PUT">
                                    <td><input type="text" class="form-control" value="{{secIn}}"disabled></td>
                                    <td><input class="form-control" pattern="[A-Za-z_]{1,32_}" type="text" name="player"
                                               value="{{player}}"></td>
                                    <td><input class="form-control" type="number" name="value" value="{{value}}"></td>
                                    <td><input class="form-control" type="text" name="team" value="{{team}}"></td>
                                    <td>
                                        <button type="submit" class="btn btn-success">Update</button>
                                    </td>
                                </form>
                                <form method="POST" action="/" enctype="application/x-www-form-urlencoded">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" value="{{_id}}" name="id">
                                    <td>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </td>
                                </form>
                            </tr>
                        {{/each}} 
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-3 text-center order-2">
                    
                    <form action="/" method="POST">
                        <div class="form-group">
                          <select class="form-control" name="secIn">
                                <option value="Shooting Guard">Shooting Guard</option>
                                <option value="Point Guards">Point Guards</option>
                                <option value="Power Forward">Power Forward</option>
                                <option value="Small Forward">Small Forward</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input class="form-control" pattern="[A-Za-z_]{1,32_}" type="text" name="player" placeholder="player">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="value" placeholder="value">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="team" placeholder="team">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </form>
                             
                </div>
            </div>
    </div>
